<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView_recyclerViewDetail_painting_home"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_gravity="center"
        android:scaleType="centerInside"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nombre del artista."
        android:textSize="24sp"
        android:id="@+id/textView_recyclerViewDetail_artistName"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nombre del cuadro."
        android:textSize="16sp"
        android:id="@+id/textView_recyclerViewDetail_paintingName"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#666666"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

</LinearLayout>